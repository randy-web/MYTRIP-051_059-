        android:textColor="#171616"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projects"
        android:textSize="24dp"
        android:fontFamily="@font/quillan"
        android:layout_marginTop="138dp"
