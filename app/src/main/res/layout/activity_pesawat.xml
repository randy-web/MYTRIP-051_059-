<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PesawatActivity"
    android:background="#F5FDFE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesawat."
        android:fontFamily="@font/quillan"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="36dp"/>

    <View
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="330dp"
        android:layout_height="250dp"
        android:background="@drawable/kotak"/>

    <EditText
        android:background="@drawable/picikan"
        android:layout_marginTop="120dp"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Darimana?"
        android:paddingLeft="15dp"
        />

    <EditText
        android:background="@drawable/picikan"
        android:layout_marginTop="210dp"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Kemana?"
        android:paddingLeft="15dp"
        />

    <Button
        android:id="@+id/find"
        android:background="@drawable/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Lengkapi Detail Pemesan"
        android:layout_marginTop="330dp"
        android:textColor="@color/colorbiru"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tujuan Populer"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:background="@drawable/pupoler"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>